<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:clipToPadding="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_message_text_layout"
        android:background="@drawable/my_message_background"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:elevation="2dp"
        android:maxWidth="250dp"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:text="Message" />

    <TextView
        android:id="@+id/my_time_text_layout"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/my_message_text_layout"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/my_message_text_layout"
        android:paddingLeft="10dp"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/others_message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:maxWidth="250dp"
        android:background="@drawable/others_message_background"
        android:elevation="2dp"
        android:padding="10dp"
        android:text="Message"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/others_time_text_layout"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/others_message_text_layout"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/others_message_text_layout"
        android:paddingLeft="10dp"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/seen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/my_message_text_layout"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/my_time_text_layout"
        android:text="[Seen]"
        android:visibility="gone"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="6dp" />

</RelativeLayout>